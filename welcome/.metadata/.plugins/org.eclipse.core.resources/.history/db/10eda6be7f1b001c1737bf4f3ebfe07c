package AplikasiGrade;

import java.util.Scanner;

public class Program {
	public static void main(String[] args) {	
	float  Ntugas=0, NUTS=0, NUAS=0, grade;
	byte hasil;
	String nama;
	
	Scanner keyboard = new Scanner(System.in);
	System.out.println("===================================");
	System.out.print("Nama              : ");
	nama = keyboard.next();
	
	while(Ntugas<0 && Ntugas>100) {
	System.out.print("input nilai tugas : ");
	Ntugas = keyboard.nextFloat();
	}
	
	while(NUTS<0 && NUTS>100) {
	System.out.print("input nilai UTS   : ");
	NUTS = keyboard.nextFloat();
	}
	
	while(NUAS<0 && NUAS>100) {
	System.out.print("input nilai UAS   : ");
	NUAS = keyboard.nextFloat();
	}
	
	
	grade= Ntugas/100*20+NUTS/100*35+NUAS/100*45;
	hasil= (byte)grade;
	System.out.printf(" nilai %d \n", hasil);
	if(grade > 85) {
		System.out.println("***********");
		System.out.println("* Grade A *");
		System.out.println("***********");
	}else if(grade>= 75 && grade <= 84){
		System.out.println("***********");
		System.out.println("* Grade B *");
		System.out.println("***********");
	}else if(grade>= 65 && grade <= 74){
		System.out.println("***********");
		System.out.println("* Grade C *");
		System.out.println("***********");
	}else if(grade>= 49 && grade <= 64){
		System.out.println("***********");
		System.out.println("* Grade D *");
		System.out.println("***********");
	}else if(grade<50){
		System.out.println("***********");
		System.out.println("* Grade E *");
		System.out.println("***********");
	}
	System.out.println("===================================");
	
	}

}
