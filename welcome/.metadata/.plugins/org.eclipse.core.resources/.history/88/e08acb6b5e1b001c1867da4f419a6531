package AplikasiGrade;

import java.util.Scanner;

public class Program {
	public static void main(String[] args) {
	int Ntugas, NUTS, NUAS, grade, Nilaitugas, NilaiUTS, NilaiUAS;	
	String nama;
	
	Scanner keyboard = new Scanner(System.in);
	System.out.print("Nama : ");
	nama = keyboard.next();
	System.out.print("input nilai tugas : ");
	Ntugas = keyboard.nextInt();
	System.out.print("input nilai UTS   : ");
	NUTS = keyboard.nextInt();
	System.out.print("input nilai UAS   : ");
	NUAS = keyboard.nextInt();
	
	//Nilaitugas = 
	grade= Ntugas/100*20+NUTS/100*35+NUAS/100*45;
	System.out.printf(" nilai %d ", grade);
	
	if(grade > 85) {
		System.out.println("Grade A");
	}else if(grade>= 75 && grade <= 84);{
		System.out.println("Grade B");
	}
	
	}

}
